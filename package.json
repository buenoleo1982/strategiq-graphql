{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "bun src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "schema:generate": "NEXUS_SHOULD_GENERATE_ARTIFACTS=true NODE_ENV=development bun src/graphql/schema.ts",
    "lint": "biome check --write .",
    "lint:unsafe": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "check": "biome check --write . && tsc --noEmit && bun run schema:generate && biome format --write . && bun run test:run",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "graphql": "^16.11.0",
    "graphql-yoga": "^5.16.0",
    "nexus": "^1.3.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "pino-roll": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/bun": "latest",
    "@types/node": "^24.9.1",
    "@vitest/ui": "^3.2.4",
    "prisma": "^6.17.1",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
